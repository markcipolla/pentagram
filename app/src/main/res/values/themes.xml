<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme - Dark mode only (using Light base with dark overrides) -->
    <style name="Theme.Pentagram" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/button_default</item>
        <item name="colorPrimaryVariant">@color/button_pressed</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Surface color (for cards, buttons, etc.) -->
        <item name="colorSurface">@color/background_dark</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <!-- Background color -->
        <item name="android:colorBackground">@color/background_dark</item>
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/background_dark</item>
        <!-- Navigation bar color -->
        <item name="android:navigationBarColor">@color/background_dark</item>
        <!-- Window background -->
        <item name="android:windowBackground">@color/background_dark</item>
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
    </style>

    <!-- Theme for activities with ActionBar (Help, etc.) -->
    <style name="Theme.Pentagram.ActionBar" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/button_default</item>
        <item name="colorPrimaryVariant">@color/button_pressed</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Surface color -->
        <item name="colorSurface">@color/background_dark</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <!-- Background color -->
        <item name="android:colorBackground">@color/background_dark</item>
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/button_default</item>
        <!-- Navigation bar color -->
        <item name="android:navigationBarColor">@color/background_dark</item>
        <!-- Window background -->
        <item name="android:windowBackground">@color/background_dark</item>
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
    </style>

    <!-- Theme for onboarding screens -->
    <style name="Theme.Pentagram.Onboarding" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Surface color -->
        <item name="colorSurface">@color/background_dark</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <!-- Background color -->
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="android:statusBarColor">@color/background_dark</item>
        <item name="android:navigationBarColor">@color/background_dark</item>
        <item name="android:windowBackground">@color/background_dark</item>
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
    </style>
</resources>
