<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme with DayNight support -->
    <style name="Theme.Pentagram" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/button_default</item>
        <item name="colorPrimaryVariant">@color/button_pressed</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/background_adaptive</item>
        <!-- Navigation bar color -->
        <item name="android:navigationBarColor">@color/background_adaptive</item>
        <!-- Window background -->
        <item name="android:windowBackground">@color/background_adaptive</item>
    </style>

    <!-- Theme for activities with ActionBar (Settings, Help, etc.) -->
    <style name="Theme.Pentagram.ActionBar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/button_default</item>
        <item name="colorPrimaryVariant">@color/button_pressed</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/button_default</item>
        <!-- Navigation bar color -->
        <item name="android:navigationBarColor">@color/background_adaptive</item>
        <!-- Window background -->
        <item name="android:windowBackground">@color/background_adaptive</item>
    </style>

    <!-- Theme for onboarding screens -->
    <style name="Theme.Pentagram.Onboarding" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/background_adaptive</item>
        <item name="android:navigationBarColor">@color/background_adaptive</item>
        <item name="android:windowBackground">@color/background_adaptive</item>
    </style>
</resources>
